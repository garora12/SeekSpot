<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--<android.support.v7.widget.CardView
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        card_view:cardElevation="5dp"
        app:cardUseCompatPadding="false"
        card_view:cardCornerRadius="5dp">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="SA"

            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/title_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/icon_entry"
            android:text="Dialog Resaturant"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dist_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="100m"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/rate_entry"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_entry"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon_entry"
            android:numStars="5"
            android:src="@drawable/back"
            android:stepSize="2.0" />
    </RelativeLayout>
    <!--   </android.support.v7.widget.CardView>-->

</LinearLayout>